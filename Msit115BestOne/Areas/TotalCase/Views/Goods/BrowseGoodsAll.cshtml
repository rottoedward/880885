}
@{Session["Lo"] = 1;}
<h2 style="display:inline" >物品案件</h2><a href="~/TotalCase/ManPowers/ManPowerAll" id="myButton1" class="all"  style="margin-bottom:5px;margin-left:5px">切換到人力案件</a>
<a href="~/TotalCase/Goods/Goodsneed" id="myButton1" style="margin-left:300px;">物品需求</a><a href="~/TotalCase/Goods/Goodsgive" id="myButton1">物品贈予</a>

<br />
   

    @*@Html.Action("CRUD_Button", "Common", new { categoryName = "Goods" })*@

    <div class="color-bar-1"></div>
    <div class="color-bar-2 color-bg"></div>
    <br />

    <div class="container main-container">

        <!-- Page Content
        ================================================== -->
        <div class="row">
            <!-- Gallery Items
            ================================================== -->
            <div class="span9 gallery">
                <!--分類-->
                <ul id="filterOptions" class="gallery-cats clearfix">
                    <li class="active"><a href="#" id="myButton" class="all">全部案件</a></li>
                    @foreach (var gc in Model.GoodsClass)
                    {
                        <li><a href="#" id="myButton" class="@gc.GdsClass">@gc.GdsClass</a></li>
                    }

                </ul>
                <div class="row clearfix">
                    <ul class="gallery-post-grid holder">
                        @foreach (var gi in Model.Goods)
                        {




                            <li class="span3 gallery-item" data-id="id-@gi.CaseID" data-type="@gi.GdsClass">
                                <span class="gallery-hover-4col hidden-phone hidden-tablet">
                                    <span class="gallery-icons">
                                        <a href="~/MyCaseCenter/MyGood/BytesImage/@gi.CaseID" class="item-zoom-link lightbox" title="@gi.CaseTitle" data-rel="prettyPhoto"></a>
                                        <a href="~/TotalCase/Goods/GoodsRead/@gi.CaseID" class="item-details-link"></a>
                                    </span>
                                </span>
                                <a href="#"><img src="~/TotalCase/Goods/BytesImage/@gi.CaseID" alt="Gallery" class="Goodimg"></a>
                                <span class="project-details">
                                    <a href="~/TotalCase/Goods/GoodsRead/@gi.CaseID">@gi.CaseTitle</a>

                                    <span style="margin-right:30px">會員:@(gi.NickName) </span>
                                    <br />
                                    <span style="margin-left:0px">@(gi.StatusName)</span>
                                    <span style="margin-left:50px"> 數量:@(gi.GdsCount)個</span>

                                    @*@(gi.GdsName)  &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;  會員:@(gi.NickName) <br />
                                    @(gi.StatusName) &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;  數量:@(gi.GdsCount)個*@
                                </span>
                            </li>
                        }
                    </ul>
                </div>
                <!-- Pagination -->
                @*<div class="pagination GoodpageGroup">
                        <ul>
                            <li class="active"><a href="#">Prev</a></li>
                            <li class="active"><a href="#">1</a></li>
                            <li><a href="#">2</a></li>
                            <li><a href="#">3</a></li>
                            <li><a href="#">4</a></li>
                            <li><a href="#">Next</a></li>
                        </ul>
                    </div>*@
            </div><!-- End gallery list-->
        </div><!-- End container row -->

    </div> <!-- End Container -->
