@model Msit115BestOne.Models.Board

@{
    ViewBag.Title = "Create";
}

<h2>發文</h2>
<form class="form-horizontal" method="post" action="~/Boards/Boards/Create" enctype="multipart/form-data">
    <table class="table table-bordered">
        <div class="form-group">
            <label for="CaseTitle" class="col-sm-2 control-label">標題</label>
            <div class="col-sm-10">
               @* <input type="text" class="form-control" id="CaseTitle" name="CaseTitle" placeholder="CaseTitle">*@
                @Html.EditorFor(Model=>Model.CaseTitle,new { htmlAttributes = new { @class = "form-control", id = "CaseTitle", name = "CaseTitle", placeholder = "CaseTitle" } })
                @Html.ValidationMessageFor(Model => Model.CaseTitle,"",new { @class="text-danger"})
    </div>
</div>
<div class="form-group">
    <label for="CaseContent" class="col-sm-2 control-label">內容</label>
    <div class="col-sm-10">
        <input type="text" class="form-control" id="CaseContent" name="CaseContent" placeholder="CaseContent">
    </div>
</div>

<div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
        <button type="submit" class="btn btn-success">新增</button>
        @Html.ActionLink("返回", "Index","Home", new {@class = "btn btn-primary" , area = "" },null)
    </div>
</div>
</table>
</form>
<br />
<br />
@*@section scripts{*@
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
@*}*@