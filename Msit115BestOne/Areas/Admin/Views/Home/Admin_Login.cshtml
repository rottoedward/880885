@model Msit115BestOne.Models.Administrator
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>AdminLTE 2 | Log in</title>
    <meta content='width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no' name='viewport'>
    <!-- Bootstrap 3.3.2 -->
    <link href="~/Areas/Admin/Admin_UI_Template/bootstrap/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <!-- Font Awesome Icons -->
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css" rel="stylesheet" type="text/css" />
    <!-- Theme style -->
    <link href="~/Areas/Admin/Admin_UI_Template/dist/css/AdminLTE.min.css" rel="stylesheet" type="text/css" />
    <!-- iCheck -->
    <link href="~/Areas/Admin/Admin_UI_Template/plugins/iCheck/square/blue.css" rel="stylesheet" type="text/css" />
    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
    <![endif]-->
</head>
<body class="login-page">
    <div class="login-box">
        <div class="login-logo">

            <!--確認Session已清除-->
            <p>@Session["Authority"]</p>
            <p>@Session["AdminID"]</p>

            <a href="~/"><b>Admin</b>Login</a>
        </div><!-- /.login-logo -->
        <div class="login-box-body">
            <p class="login-box-msg">公益互助網系統</p>
            <form action="@Url.Action("Admin_Login","Home")" method="post">
                <div class="form-group has-feedback">
                    @Html.EditorFor(model => model.AdminID, new { htmlAttributes = new { @class = "form-control", placeholder = "帳號" } })
                    <span class="glyphicon glyphicon-user form-control-feedback"></span>
                    @Html.ValidationMessageFor(model => model.AdminID, "", new { @class = "text-danger" })
                </div>
                <div class="form-group has-feedback">
                    @Html.EditorFor(model => model.Apassword, new { htmlAttributes = new { @class = "form-control", placeholder = "密碼", type = "password" } })
                    <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                    @Html.ValidationMessageFor(model => model.Apassword, "", new { @class = "text-danger" })
                </div>
                <div class="form-group has-feedback">
                    @if (ViewBag.admin_login_error != null)
                    {
                        <p class="text-danger">@ViewBag.admin_login_error</p>
                    }
                </div>
                <div class="row">
                    <div class="col-xs-8">
                    </div><!-- /.col -->
                    <div class="col-xs-4">
                        <button type="submit" class="btn btn-primary btn-block btn-flat">登入</button>
                    </div><!-- /.col -->
                </div>
            </form>
            @*<a href="#">忘記密碼</a><br>*@
        </div><!-- /.login-box-body -->
    </div><!-- /.login-box -->
    <!-- jQuery 2.1.3 -->
    <script src="~/Areas/Admin/Admin_UI_Template/plugins/jQuery/jQuery-2.1.3.min.js"></script>
    <!-- Bootstrap 3.3.2 JS -->
    <script src="~/Areas/Admin/Admin_UI_Template/bootstrap/js/bootstrap.min.js" type="text/javascript"></script>
    <!-- iCheck -->
    <script src="~/Areas/Admin/Admin_UI_Template/plugins/iCheck/icheck.min.js" type="text/javascript"></script>
    <script>
        $(function () {
            $('input').iCheck({
                checkboxClass: 'icheckbox_square-blue',
                radioClass: 'iradio_square-blue',
                increaseArea: '20%' // optional
            });
        });
    </script>

    <script src="~/Areas/Admin/Scripts/jquery.validate.js"></script>
    <script src="~/Areas/Admin/Scripts/jquery.validate.unobtrusive.js"></script>
</body>
</html>

