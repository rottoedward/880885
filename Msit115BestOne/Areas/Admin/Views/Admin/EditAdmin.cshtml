@model Msit115BestOne.Models.Administrator

@{
    ViewBag.Title = "修改管理員資料";
}

<div class="content-wrapper">
    <!-- Main content -->
    <section class="content">
        <div class="content-header">
        </div>
        <div class="row">
            <div class="col-md-3"></div>
            <!-- left column -->
            <div class="col-md-6">
                <!-- general form elements -->
                <div class="box box-primary">
                    <div class="box-header">
                        <h3 class="box-title">管理員修改</h3>
                    </div><!-- /.box-header -->
                    <!-- form start -->
                    @using (Html.BeginForm("EditAdmin", "Admin", FormMethod.Post, new { role = "form" }))
                    {
                        @Html.AntiForgeryToken()
                        <div class="box-body">
                            <div class="form-group">
                                @Html.LabelFor(model => model.AdminID, htmlAttributes: new { @class = "control-label" })
                                <div>
                                    @Html.EditorFor(model => model.AdminID, new { htmlAttributes = new { @class = "form-control", ReadOnly = "ReadOnly" } })
                                    @Html.ValidationMessageFor(model => model.AdminID, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.Apassword, htmlAttributes: new { @class = "control-label" })
                                <div>
                                    @Html.EditorFor(model => model.Apassword, new { htmlAttributes = new { @class = "form-control", type = "password" } })
                                    @Html.ValidationMessageFor(model => model.Apassword, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.Authority, htmlAttributes: new { @class = "control-label" })
                                <div>
                                    @Html.DropDownListFor(model => model.Authority, (List<SelectListItem>)ViewBag.mySelectItemList , new { htmlAttributes = new { @class = "form-control" } })
                                    @*@Html.EditorFor(model => model.Authority, new { htmlAttributes = new { @class = "form-control" } })*@
                                    @Html.ValidationMessageFor(model => model.Authority, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <div class="box-footer">
                            <button type="submit" class="btn btn-primary">修改</button>
                        </div>
                    }
                </div><!-- /.box -->
                <!-- Form Element sizes -->
            </div><!--/.col (left) -->
            <div class="col-md-3"></div>
        </div>   <!-- /.row -->
    </section><!-- /.content -->
</div><!-- /.content-wrapper -->



@section scripts{
    <script src="~/Areas/Admin/Scripts/jquery.validate.min.js"></script>
    <script src="~/Areas/Admin/Scripts/jquery.validate.unobtrusive.min.js"></script>
}
